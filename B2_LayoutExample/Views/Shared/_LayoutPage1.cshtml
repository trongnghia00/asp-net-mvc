<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar Bootstrap 5 -->
    <nav class="navbar navbar-expand-lg" style="background-color: greenyellow;">
        <div class="container">
            <a class="navbar-brand" href="/">My Website</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MyProfile">Cá nhân</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Family">Gia đình</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Nội dung của trang -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3" style="background-color:antiquewhite; min-height:1050px;padding:0;">
                <ul class="nav flex-column">
                    <!-- Mục có sẵn -->
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Mục 1
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Mục 2
                        </a>
                    </li>

                    <!-- Section cho Sidebar (sẽ được thay đổi bởi từng view) -->
                    @RenderSection("Sidebar", required: false)
                </ul>
            </nav>

            <!-- Content -->
            <main class="col-md-9">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
</body>
</html>
